{
	"name": "club-green-scorecard",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:debug": "DEBUG=* vite dev",
		"dev:log": "vite dev 2>&1 | tee logs/dev.log",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:debug": "playwright test --debug",
		"generate-types": "supabase gen types typescript --project-id xkqioergzocysebvrhcs > src/lib/database.types.ts",
		"logs:tail": "tail -f logs/dev.log",
		"logs:clear": "rm -f logs/*.log",
		"logs:export": "mkdir -p logs/exports && cp logs/*.log logs/exports/$(date +%Y%m%d_%H%M%S)_logs.log"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@playwright/test": "^1.40.0",
		"@sveltejs/adapter-vercel": "^5.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
		"@sveltejs/package": "^2.0.0",
		"@tailwindcss/postcss": "^4.1.7",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"@types/qrcode": "^1.5.5",
		"@vitest/coverage-v8": "^3.1.4",
		"@vitest/ui": "^3.1.4",
		"dotenv": "^16.5.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"happy-dom": "^17.5.6",
		"jsdom": "^26.1.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"supabase": "^2.23.4",
		"svelte": "^5.0.0-next.1",
		"svelte-check": "^3.6.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^5.0.0",
		"vite-plugin-commonjs": "^0.10.4",
		"vitest": "^3.1.4"
	},
	"dependencies": {
		"@stripe/stripe-js": "^7.3.1",
		"@supabase/ssr": "^0.6.1",
		"@supabase/supabase-js": "^2.39.0",
		"@svelte-plugins/datepicker": "^1.0.11",
		"bad-words": "^4.0.0",
		"canvas-confetti": "^1.9.3",
		"date-fns": "^4.1.0",
		"leo-profanity": "^1.7.0",
		"lucide-svelte": "^0.514.0",
		"normalize.css": "^8.0.1",
		"qrcode": "^1.5.4",
		"stripe": "^18.2.0",
		"svelte-motion": "^0.12.2",
		"svelte-sonner": "^1.0.1",
		"tippy.js": "^6.3.7",
		"uuid": "^11.1.0",
		"zod": "^3.25.51"
	}
}
